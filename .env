# Real-Time Geometric Visualization - Configuration

# ISS API Configuration
ISS_API_URL=http://api.open-notify.org/iss-now.json
ISS_UPDATE_INTERVAL=5000  # milliseconds between updates

# Rendering Configuration
TARGET_FPS=60
ANTI_ALIASING=true
PIXEL_RATIO=1.0  # Use 2.0 for retina displays (more GPU intensive)

# Simulation Settings
DEFAULT_TIME_SPEED=500    # 500x real-time (Earth orbit in ~30 min)
MIN_TIME_SPEED=1          # Minimum speed multiplier
MAX_TIME_SPEED=50000      # Maximum speed multiplier

# Performance Settings
ENABLE_SHADOWS=false       # Shadows (expensive, disable for potato mode)
ENABLE_BLOOM=true          # Glow/bloom effects
ENABLE_PARTICLES=true      # Particle systems (sun corona, etc.)
ORBIT_SEGMENTS=64          # Number of segments in orbital paths (32 for potato)
PLANET_SEGMENTS=32         # Number of segments in sphere geometry (16 for potato)

# Visual Style
DEFAULT_STYLE=realistic    # realistic, cartoon, neon, minimalist

# Camera
DEFAULT_CAMERA_DISTANCE=150  # Units from origin
CAMERA_FOV=45                # Field of view in degrees
CAMERA_NEAR=0.1              # Near clipping plane
CAMERA_FAR=10000             # Far clipping plane

# Scale Factors (for visibility)
# In reality, planets would be microscopic at true scale
PLANET_SIZE_SCALE=1000       # Make planets 1000x larger than true scale
ISS_SIZE_SCALE=10000         # Make ISS 10,000x larger for visibility
AU_SCENE_UNITS=100           # 1 Astronomical Unit = 100 scene units

# Debug
DEBUG_MODE=false             # Show debug info in console
SHOW_FPS=true                # Display FPS counter
SHOW_AXES=false              # Show coordinate axes helpers
SHOW_GRID=false              # Show grid helper

# Feature Toggles (defaults)
SHOW_ORBITS=true
SHOW_LABELS=true
SHOW_TRAILS=true
SHOW_STARS=true
